[Unit]
Description=Supabase Daily Backup Service
After=network.target

[Service]
Type=oneshot
# Project directory
WorkingDirectory=%h/repos/supabase-backup
# Run the script and pipe output to log file in the project directory
ExecStart=/usr/bin/env bash -c "%h/repos/supabase-backup/backup.sh"

[Install]
WantedBy=default.target
